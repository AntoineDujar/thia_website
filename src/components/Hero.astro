---
import { Image } from "astro:assets";
import HeroImage from "@images/heroimage.jpeg";
import Mic from "@components/Mic.astro";
---

<div class="hero-wrapper">
  <Image
    src={HeroImage}
    class="image-wrapper"
    alt="Image of aspiring vocalist Thia Lanuza"
  />
  <div class="text-wrapper">
    <h1>Thia Lanuza</h1>
    <div class="nested">
      <div class="vocalist">
        <h2>Aspiring Vocalist</h2>
        <div class="mic">
          <Mic />
        </div>
        <svg
          width="60"
          height="493"
          class="wire"
          viewBox="0 0 60 493"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M2 2C28.305 26.814 74.7217 98.5488 49.9484 186.977C18.9817 297.512 10.9903 292.248 38.9602 420.829C61.3361 523.695 40.2921 572.47 26.9731 584"
            stroke="white"
            stroke-width="5"></path>
        </svg>
      </div>
      <a href="#contact">
        <p>BOOK NOW</p>
      </a>
    </div>
  </div>
</div>

<style>
  .hero-wrapper {
    min-height: 1056px;
    background-color: #000000;
    display: flex;
    position: relative;
  }

  .image-wrapper {
    z-index: 1;
  }

  .wire {
    position: absolute;
    top: 200px;
    right: -50px;
  }

  .vocalist {
    position: relative;
    display: flex;
    flex-direction: row;
    align-items: flex-end;
  }

  .mic {
    position: absolute;
    bottom: 15px;
    right: 0;
  }

  .text-wrapper {
    position: absolute;
    right: 0;
    z-index: 2;
    text-align: right;
    margin-right: 5rem;
    line-height: 1;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
  }

  .nested {
    margin-top: 8rem;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    min-height: 200px;
    gap: 2rem;
  }

  h1,
  h2 {
    /* font-family: "Magtic", "DM Serif Display", serif; */
    font-family: "Magtis", serif;
    color: white;
  }

  h1 {
    font-size: 15rem;
  }

  h2 {
    font-size: 7rem;
    max-width: 500px;
    text-align: left;
  }

  a {
    font-family: "Koulen", serif;
    border-radius: 0px;
    font-size: 2rem;
    text-decoration: none;
    padding: 1rem 1.5rem;
    background-color: rgb(255, 255, 255);
    color: rgb(0, 0, 0);
    align-self: flex-start;
  }

  a:visited {
    color: rgb(0, 0, 0);
  }

  @media (max-width: 1250px) {
    h1 {
      margin-top: 2rem;
      text-align: center;
      font-size: 5rem;
    }

    .hero-wrapper {
      margin: 0;
      min-height: unset;
    }

    .text-wrapper {
      position: relative;
      margin: 60% auto 20% auto;
    }

    .nested {
      margin: 0 auto;
    }
    .vocalist {
      margin: 0 auto;
    }

    a {
      align-self: center;
    }

    h2 {
      font-size: 3.25rem;
      text-align: center;
    }

    .hero-wrapper {
      max-height: 500px;
    }
    .image-wrapper {
      position: absolute;
      max-width: 100%;
      height: auto;
    }
    .mic,
    .wire {
      display: none;
    }
  }
</style>
